<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="collapse navbar-collapse" style="display: flex; flex-direction: column; align-items: right;">
      <% if(username === ''||username ==="undefined"){ %>  
      <form class="collapse navbar-collapse" action="/urls/login" method="POST">
        <div>
          <input name="username" value="<%=username%>"/> <button type="submit">Login</button>
        </div>
      </form>
    <% } else {%>
      <form class="collapse navbar-collapse" action="/urls/logout" method="POST">
        <div>
          <td>Logged in as <%= username %> !</td> <button type="submit">Logout</button>
        </div>
      </form>
      <% } %>
    </div>
    </div>
  </nav>
</header>